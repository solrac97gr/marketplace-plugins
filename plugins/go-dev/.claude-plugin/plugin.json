{
  "name": "go-dev",
  "description": "Complete toolkit for Go backend development with hexagonal architecture, DDD, TDD/BDD, and automated architecture testing",
  "version": "1.0.0",
  "author": {
    "name": "solrac97gr",
    "email": "solrac97gr@users.noreply.github.com"
  },
  "homepage": "https://github.com/solrac97gr/marketplace-plugins",
  "repository": "https://github.com/solrac97gr/marketplace-plugins",
  "license": "MIT",
  "keywords": [
    "golang",
    "hexagonal-architecture",
    "clean-architecture",
    "ddd",
    "domain-driven-design",
    "tdd",
    "bdd",
    "godog",
    "microservices",
    "architecture-testing",
    "goarchtest"
  ],
  "skills": [
    "./skills/start-project",
    "./skills/new-feature",
    "./skills/new-entity",
    "./skills/new-usecase",
    "./skills/from-diagram",
    "./skills/review-arch",
    "./skills/update-arch-tests"
  ],
  "agents": [
    "./agents/architecture-reviewer.md",
    "./agents/ddd-consultant.md",
    "./agents/domain-documenter.md",
    "./agents/test-coverage-guardian.md",
    "./agents/api-contract-validator.md",
    "./agents/security-reviewer.md",
    "./agents/error-handling-consultant.md",
    "./agents/database-migration-assistant.md",
    "./agents/code-quality-reviewer.md"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "CommitChanges|CreateCommit|git.*commit",
        "hooks": [
          {
            "type": "agent",
            "prompt": "Update domain documentation before committing changes. Context: $ARGUMENTS",
            "description": "Update domain documentation before committing changes"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "matchPath": ".*_test\\.go$",
        "hooks": [
          {
            "type": "agent",
            "prompt": "Review test coverage and quality. Context: $ARGUMENTS",
            "description": "Review test coverage and quality"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "matchPath": "internal/.*/infrastructure/http/.*\\.go$",
        "hooks": [
          {
            "type": "agent",
            "prompt": "Validate API contracts and consistency. Context: $ARGUMENTS",
            "description": "Validate API contracts and consistency"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "matchPath": "migrations/.*\\.sql$",
        "hooks": [
          {
            "type": "agent",
            "prompt": "Review database migration safety. Context: $ARGUMENTS",
            "description": "Review database migration safety"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "matchPath": "internal/.*\\.go$",
        "hooks": [
          {
            "type": "agent",
            "prompt": "Review code for architecture compliance. Context: $ARGUMENTS",
            "description": "Review code for architecture compliance"
          },
          {
            "type": "agent",
            "prompt": "Check for security vulnerabilities. Context: $ARGUMENTS",
            "description": "Check for security vulnerabilities"
          },
          {
            "type": "agent",
            "prompt": "Review error handling patterns. Context: $ARGUMENTS",
            "description": "Review error handling patterns"
          },
          {
            "type": "agent",
            "prompt": "Review code quality and Uber Go Style Guide compliance. Context: $ARGUMENTS",
            "description": "Review code quality and Uber Go Style Guide compliance"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "matchPath": "internal/.*/domain/.*\\.go$",
        "hooks": [
          {
            "type": "agent",
            "prompt": "Review this domain layer change for DDD compliance. Context: $ARGUMENTS",
            "description": "Provide DDD guidance for domain layer changes"
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/validate-domain-purity.sh",
            "description": "Validate domain layer has no external dependencies"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "matchPath": "test/architecture/.*_test\\.go$",
        "hooks": [
          {
            "type": "command",
            "command": "go test ./test/architecture/... -v",
            "description": "Run architecture tests after updating them"
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "goarchtest-analyzer": {
      "command": "${CLAUDE_PLUGIN_ROOT}/servers/goarchtest-server/goarchtest-server",
      "description": "MCP server for real-time architecture analysis"
    }
  }
}
