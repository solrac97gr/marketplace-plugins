{
  "name": "react-dev",
  "description": "Comprehensive React development plugin with TypeScript, Vite, Tailwind CSS, and modern testing tools. Provides TDD workflows, accessibility compliance, performance optimization, and intelligent code review agents.",
  "version": "1.0.0",
  "author": {
    "name": "solrac97gr",
    "email": "solrac97gr@users.noreply.github.com"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "CommitChanges|CreateCommit|git.*commit",
        "hooks": [
          {
            "type": "agent",
            "agent": "test-coverage-guardian",
            "description": "Ensure code quality before commits"
          },
          {
            "type": "agent",
            "agent": "typescript-quality-reviewer",
            "description": "Ensure code quality before commits"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "matchPath": "src/features/.*/components/.*\\.tsx$",
        "hooks": [
          {
            "type": "agent",
            "agent": "component-architecture-reviewer",
            "description": "Review component architecture and React best practices"
          },
          {
            "type": "agent",
            "agent": "react-best-practices-enforcer",
            "description": "Review React best practices"
          },
          {
            "type": "agent",
            "agent": "accessibility-reviewer",
            "description": "Review accessibility compliance"
          },
          {
            "type": "agent",
            "agent": "performance-reviewer",
            "description": "Review performance optimizations"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "matchPath": "src/features/.*/hooks/.*\\.ts$",
        "hooks": [
          {
            "type": "agent",
            "agent": "hook-usage-reviewer",
            "description": "Validate custom hooks usage"
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/validate-component-purity.sh \"${TOOL_FILE_PATH}\"",
            "description": "Validate component purity"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "matchPath": ".*\\.test\\.(ts|tsx)$",
        "hooks": [
          {
            "type": "agent",
            "agent": "test-coverage-guardian",
            "description": "Review test coverage and quality"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "matchPath": "src/features/.*/context/.*\\.tsx$",
        "hooks": [
          {
            "type": "agent",
            "agent": "state-management-reviewer",
            "description": "Review state management patterns"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "matchPath": "src/.*\\.(ts|tsx)$",
        "hooks": [
          {
            "type": "agent",
            "agent": "typescript-quality-reviewer",
            "description": "Review TypeScript quality"
          },
          {
            "type": "agent",
            "agent": "security-reviewer",
            "description": "Review security"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "matchPath": "tailwind\\.config\\.js$|.*\\.tsx$",
        "hooks": [
          {
            "type": "agent",
            "agent": "tailwind-best-practices-reviewer",
            "description": "Review Tailwind CSS best practices"
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "playwright-server": {
      "command": "node",
      "args": [
        "${CLAUDE_PLUGIN_ROOT}/servers/playwright-server/playwright-server.js"
      ],
      "description": "Playwright E2E testing integration with tools for test execution, critical flow validation, and cross-browser testing"
    },
    "component-analyzer": {
      "command": "node",
      "args": [
        "${CLAUDE_PLUGIN_ROOT}/servers/component-analyzer/component-analyzer.js"
      ],
      "description": "React component analysis tools for component tree analysis, prop drilling detection, and bundle size analysis"
    }
  }
}
